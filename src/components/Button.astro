---
// src/components/Button.astro
const label = Astro.props.label;
---

<button class="carousel-button">{label}</button>

<style>
  .carousel-button {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
  }

  .carousel-button:hover {
    background-color: #0056b3;
  }
</style>
