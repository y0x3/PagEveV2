<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Galer√≠a de Fotos</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/styles/index.css" />
  </head>
  <body>
    <h1>¬°Nuestra Boda!</h1>
    <h2>Evelin & Mario</h2>
    <p class="invite-text">Comparte aqu√≠ tus fotos favoritas de este d√≠a tan especial üíï</p>

    <div class="image-container">
      <img id="randomImage" src="" alt="Imagen aleatoria" />
    </div>

    <input type="file" id="fileInput" accept="image/*" multiple style="display:none" />
    <button id="uploadBtn">Subir fotos</button>

    <a href="/galeria" class="page-link">Ver galer√≠a de fotos</a>


    <script is:inline>
      let images = [];
      const randomImage = document.getElementById('randomImage');
      const fileInput = document.getElementById('fileInput');
      const uploadBtn = document.getElementById('uploadBtn');

      // Carga las im√°genes desde el endpoint de Cloudinary
      document.addEventListener('DOMContentLoaded', () => {
        
        async function loadImages() {
          try {
            const response = await fetch('/api/cloudinary-list'); // Endpoint din√°mico
            if (!response.ok) {
              throw new Error(`Error al obtener las im√°genes: ${response.statusText}`);
            }

            const data = await response.json();
            console.log('Respuesta de la API:', data); // Depuraci√≥n

            if (!data.images || !Array.isArray(data.images)) {
              throw new Error('La respuesta del servidor no contiene el campo "images"');
            }

            images = data.images; // Guarda las im√°genes en la lista

            if (images.length > 0) {
              showRandomImage(); // Muestra la primera imagen aleatoria
              setInterval(showRandomImage, 3000); // Cambia la imagen cada 3 segundos
            } else {
              console.error('No se encontraron im√°genes en Cloudinary.');
            }
          } catch (error) {
            console.error('Error al cargar las im√°genes:', error);
          }
}

        // Funci√≥n para mostrar una imagen aleatoria
        function showRandomImage() {
          if (images.length === 0) return; // Si no hay im√°genes, no hace nada
          const randomIndex = Math.floor(Math.random() * images.length); // √çndice aleatorio
          randomImage.src = images[randomIndex]; // Cambia la imagen
        }

        loadImages(); // Carga las im√°genes al iniciar

        // Subida de imagen
        uploadBtn.addEventListener('click', () => {
          fileInput.click();
        });

        fileInput.addEventListener('change', async (event) => {
          const files = event.target.files; // Obtiene todos los archivos seleccionados
          if (!files || files.length === 0) return;

          uploadBtn.disabled = true;
          uploadBtn.textContent = 'Subiendo...';

          try {
            for (const file of files) {
              // Subida real a Cloudinary
              const url = await uploadToCloudinary(file, 'du24gx7kz', 'galeria_publica');
              images.unshift(url); // Agrega cada nueva imagen al inicio del arreglo
            }

            alert('Im√°genes subidas con √©xito');

            // Llama a la API para disparar el redeploy en Vercel
            const revalidateResponse = await fetch('/api/revalidate', {
              method: 'POST',
            });
            console.log('Revalidaci√≥n disparada exitosamente');
          } catch (err) {
            
          }

          uploadBtn.disabled = false;
          uploadBtn.textContent = 'Subir fotos';
          fileInput.value = ''; // Limpia el input para permitir nuevas selecciones
        });

        // Funci√≥n de subida a Cloudinary
        async function uploadToCloudinary(file, cloudName, uploadPreset) {
          const formData = new FormData();
          formData.append("file", file); // Archivo seleccionado
          formData.append("upload_preset", uploadPreset); // Nombre del preset

          try {
            const response = await fetch(`https://api.cloudinary.com/v1_1/${cloudName}/image/upload`, {
              method: "POST",
              body: formData,
            });

            if (!response.ok) {
              const errorText = await response.text();
              console.error("Error de Cloudinary:", errorText); // Muestra el error completo
              throw new Error(`Error al subir la imagen a Cloudinary: ${response.statusText}`);
            }

            const data = await response.json();
            console.log("Imagen subida con √©xito:", data);
            return data.secure_url; // Devuelve la URL segura de la imagen subida
          } catch (error) {
            console.error("Error al subir la imagen:", error);
            throw error;
          }
        }
      });
    </script>
  </body>
</html>